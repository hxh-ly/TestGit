.circleContainer {
  margin: 0 6%;
  height: 100%;
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle {
  width: 100%;
  height: 83%;
  background: #ffffff;
  -moz-border-radius: 60px;
  -webkit-border-radius: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle_icon {
  width: 60%;
  height: 60%;
  margin: auto;
}

.indeedFunction {
  display: flex;
  justify-content: space-around;
}

.scoreSearch {
  margin-right: 1vw;
  padding: 0;
  height: 60%;
  width: 50%;
  text-align: center;
  display: table;
}
